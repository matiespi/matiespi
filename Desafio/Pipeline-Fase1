pipeline {
    agent any
    parameters {
        string(name: 'NOMBRE_APELLIDO', defaultValue: '', description: 'Ingrese nombre y apellido')
        string(name: 'MAIL', defaultValue: '', description: 'Ingrese mail para enviar info')
        choice(name: 'DEPARTAMENTO', choices: ['Contabilidad', 'Finanzas', 'Tecnologia'], description: 'Asigne un departamento')
    }
    environment {
        temporalPassword = '' // Definimos una variable de entorno vacía
        resultado = ''
    }
    stages {
        stage('Download-File') {
            steps {
                script {
                    sh'''
                        cd /tmp/
                        curl -O https://raw.githubusercontent.com/matiespi/matiespi/main/Desafio/script.sh
                        chmod +x script.sh
                        ls -l script.sh
                    '''
                }
            }
        }
        stage('Execution') {
            steps {
                script {
                    temporalPassword = sh(script: 'openssl rand -base64 12 | tr -d "\n"', returnStdout: true).trim()
                    echo "${temporalPassword}"
                    resultado = sh(script: "/tmp/script.sh \"${NOMBRE_APELLIDO}\" \"${DEPARTAMENTO}\" \"${temporalPassword}\"", returnStdout: true).trim()
                
                /*emailext (
                        to: "${MAIL}",
                        subject: "Usuario creado correctamente - ${NOMBRE_APELLIDO}",
                        body: "Usuario: ${resultado} - Tu contraseña temporal es: ${temporalPassword}. Deberás cambiarla en tu primer inicio de sesión.",
                        mimeType: 'text/plain'
                    )
                    echo "Contraseña temporal generada y enviada correctamente."*/
                }
            }
        }
    }
    post {
        always{
            emailext body: "Usuario: ${resultado} - Tu contraseña temporal es: ${temporalPassword}. Deberás cambiarla en tu primer inicio de sesión.",
            recipientProviders: [[$class: 'DevelopersRecipientProvider'], [$class: 'RequesterRecipientProvider']],
            subject: "Usuario creado correctamente - ${NOMBRE_APELLIDO}"
        }
    }
}